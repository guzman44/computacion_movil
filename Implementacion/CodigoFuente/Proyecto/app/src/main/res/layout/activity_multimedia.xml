<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/menuUpFromHome"
        android:name="co.movil.computacion.controller.MenuUpFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
    </fragment>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".controller.Search">


            <TextView
                android:id="@+id/btnGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#007fff"
                android:textSize="16sp"
                android:onClick="onClick"
                android:text="@string/multimedia_buton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivPostPic" />

            <TextView
                android:id="@+id/tvEvento"
                android:layout_width="124dp"
                android:layout_height="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="@string/multimedia_foto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivPostPic"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:maxWidth="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:src="@drawable/img_base"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEvento" />

            <TextView
                android:id="@+id/tvPostText"
                android:layout_width="371dp"
                android:layout_height="29dp"
                android:paddingTop="10dp"
                android:text="@string/multimedia_post"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGrid" />

            <EditText
                android:id="@+id/etPostText"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="4"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="@+id/tvPostText"
                app:layout_constraintStart_toStartOf="@+id/tvPostText"
                app:layout_constraintTop_toBottomOf="@+id/tvPostText" />

            <Button
                android:id="@+id/btnSavePost"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="36dp"
                android:text="@string/multimedia_save"
                android:background="#002d56"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPostText" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <fragment

        android:id="@+id/menuFromMultimedia"
        android:name="co.movil.computacion.controller.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"></fragment>

</LinearLayout>